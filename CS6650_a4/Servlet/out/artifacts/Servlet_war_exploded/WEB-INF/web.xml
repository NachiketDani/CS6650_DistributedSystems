<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>PurchaseServlet</servlet-name>
    <servlet-class>PurchaseServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PurchaseServlet</servlet-name>
    <url-pattern>/purchase/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TopItemsAtStoreServlet</servlet-name>
    <servlet-class>TopItemsAtStoreServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TopItemsAtStoreServlet</servlet-name>
    <url-pattern>/items/store/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TopStoresForItemServlet</servlet-name>
    <servlet-class>TopStoresForItemServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TopStoresForItemServlet</servlet-name>
    <url-pattern>/items/top10/*</url-pattern>
  </servlet-mapping>

</web-app>